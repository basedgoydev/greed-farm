# Database (SQLite for development)
DATABASE_URL=sqlite:./dev.db

# Solana Configuration
# For DEVNET testing, use:
SOLANA_RPC_URL=https://api.devnet.solana.com
# For mainnet:
# SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Treasury wallet - this receives pump.fun fees and pays out claims
# Generate a new keypair with: solana-keygen new -o treasury.json
TREASURY_WALLET=YourTreasuryWalletPublicKeyHere
TREASURY_PRIVATE_KEY=YourTreasuryPrivateKeyBase58Here

# Token mint address - your memecoin on pump.fun
TOKEN_MINT=YourTokenMintAddressHere

# Staking Program ID - deployed Anchor program
STAKING_PROGRAM_ID=YourStakingProgramIdHere

# Token Configuration
TOTAL_TOKEN_SUPPLY=1000000000
TOKEN_DECIMALS=9

# Server
PORT=3001
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Game Configuration (in seconds)
EPOCH_DURATION=900
WARMUP_DURATION=300
QUORUM_PERCENTAGE=26
SHARED_POOL_PERCENTAGE=90
GREED_POT_PERCENTAGE=10

# CORS (optional)
CORS_ORIGIN=http://localhost:3000
